<h1>Add a product.</h1>
<%= render "layouts/errors", :object => @product %>
<%= form_for @product, html: { multipart: true } do |f| %>
  Name: <%= f.text_field :name %>
  Description: <%= f.text_field :description %>
  Price: <%= f.text_field :price %>
  Image: <%= f.file_field :image %><br><br>
  <%= f.submit "Submit", :class=>"waves-effect waves-light btn"%>

<% end %>
